<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />  <!-- No background when focused -->
            <stroke
                android:width="1dp"
                android:color="@color/grey" />  <!-- Gray border when focused -->
            <corners android:radius="8dp" />  <!-- Rounded corners -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />  <!-- No background by default -->
            <stroke
                android:width="1dp"
                android:color="@color/grey" />  <!-- Gray border by default -->
            <corners android:radius="8dp" />  <!-- Rounded corners -->
        </shape>
    </item>
</selector>